    function PaisGetAll() {
        $.ajax({
            type: 'GET',
            url: 'http://192.168.0.123/api/Pais',
            success: function (result) {
                $("#ddlPais").append('<option value="' + 0 + '">' + 'Seleccione una opción' + '</option>');
                $.each(result, function (i, pais) {
                    $("#ddlPais").append('<option value="'
